<!--Namespace da classe de Modelo para esta view-->
@model IEnumerable<BusMVC.Models.OnibusViewModel>
<!--Inclua os TempData para Sucesso e Erro aqui, conforme exemplo na view de Autenticação-->
@{ViewBag.Title = "Onibus"; }<!--Título da página para o navegador-->
<h2>Relação de Personagens</h2><!--Título da página-->
<p> <!--Links apontando para views na mesma pasta-->
@Html.ActionLink("Criar Novo Onibus", "Create")
</p>
<table class="table">
<tr><!--Títulos das colunas da tabela-->
<th>@Html.DisplayNameFor(model => model.Id)</th>
<th>@Html.DisplayNameFor(model => model.Linha)</th>
<th>@Html.DisplayNameFor(model => model.NomeLinha)</th>
<th>@Html.DisplayNameFor(model => model.PontoPartida)</th>
<th>@Html.DisplayNameFor(model => model.PontoFinal)</th>
<th>@Html.DisplayNameFor(model => model.TempoEspera)</th>
<th>@Html.DisplayNameFor(model => model.Situacao)</th>
<th></th>
</tr>
<!--Looping para escrever os dados na tabela-->
@foreach (var item in Model)
{
<tr>
<td>@Html.DisplayFor(modelItem => item.Id)</td>
<td>@Html.DisplayFor(modelItem => item.Linha)</td>
<td>@Html.DisplayFor(modelItem => item.NomeLinha)</td>
<td>@Html.DisplayFor(modelItem => item.PontoPartida)</td>
<td>@Html.DisplayFor(modelItem => item.PontoFinal )</td>
<td>@Html.DisplayFor(modelItem => item.TempoEspera)</td>
<td>@Html.DisplayFor(modelItem => item.Situacao)</td>
<td><!--Coluna para Links/botões-->
@Html.ActionLink("Editar", "Edit", new { id = item.Id } ) |
@Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
@Html.ActionLink("Deletar", "Delete", new { id = item.Id },
new {onclick = "return confirm('Deseja realmente deletar esete onibus?')"})
</td>
</tr>
}
</table>